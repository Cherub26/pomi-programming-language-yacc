// ===================================================================
// POMI LOOP TEST
// Simple examples demonstrating loop functionality in POMI
// ===================================================================

// === SIMPLE COUNTING LOOP ===
PRINT("=== Simple counting loop ===");

// Loop from 1 to 5
DEFINE counter = 1;
PRINT("Counting up from 1 to 5:");
WHILE counter <= 5 DO
    PRINT(counter);
    counter += 1;
ENDWHILE;

// === NESTED LOOP EXAMPLE ===
PRINT("");
PRINT("=== Simple nested loop ===");

// Simple nested loop to create a pattern
DEFINE i = 1;
WHILE i <= 3 DO
    PRINT("Outer loop iteration: ");
    PRINT(i);
    
    DEFINE j = 1;
    WHILE j <= i DO
        PRINT("  Inner loop value: ");
        PRINT(j);
        j += 1;
    ENDWHILE;
    
    i += 1;
ENDWHILE;

PRINT("Loop test completed successfully");
