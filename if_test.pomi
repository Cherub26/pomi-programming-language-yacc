// Test file demonstrating IF statements with ELSE

// Define some variables
DEFINE score = 75;
PRINT("Your score is:");
PRINT(score);

// Test IF-THEN-ELSE structure
IF score >= 90 THEN
    PRINT("Grade: A");
ELSE
    IF score >= 80 THEN
        PRINT("Grade: B");
    ELSE 
        IF score >= 70 THEN
            PRINT("Grade: C");
        ELSE
            PRINT("Grade: D");
        ENDIF;
    ENDIF;
ENDIF;

// Test string output
PRINT("Test completed");

// Demonstrating function with IF-ELSE
FUNCTION getLetterGrade(score) {
    IF score >= 90 THEN
        RETURN 1; // A
    ELSE
        IF score >= 80 THEN
            RETURN 2; // B
        ELSE
            IF score >= 70 THEN
                RETURN 3; // C
            ELSE
                RETURN 4; // D
            ENDIF;
        ENDIF;
    ENDIF;
}

DEFINE letterGrade = getLetterGrade(score);
PRINT("Letter grade code:");
PRINT(letterGrade);
